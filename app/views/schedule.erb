<div class="container">
  <h1>Sign up to mentor <a href='/schedule/create'>here</a>.</h1>
  <div class="available">
    Available Appointments:
    <ul>
    <%@available_appointments.each do |appointment|%>
      <li><a href="/schedule/<%=appointment.id%>"><%=appointment.mentor.name%></a> at <%=appointment.start_time%> until <%=appointment.end_time%></li>
    <%end%>
    </ul>
  </div>

   <div class="scheduled">
    Scheduled Appointments:
    <ul>
    <%@scheduled_appointments.each do |appointment|%>
      <li><a href="/schedule/view/<%=appointment.id%>"><%=appointment.mentor.name%></a> is pairing with <%=appointment.mentee.name%></li>
    <%end%>
    </ul>
  </div>


</div>
